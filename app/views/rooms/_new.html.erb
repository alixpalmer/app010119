<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6 col-md-offset-3">

    <div class = "form-post">
      <h2>Create a new Room</h2>
        <%= simple_form_for Room.new do |f| %>
        <div class="row">
          <div class= "col-xs-6">
            <%= f.input :name, placeholder: "name of room" %>
          </div>
          <div class= "col-xs-12">
            <%= f.button :submit, "Create a room", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
    </div>
